<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7"/>
    </startup>

    <system.serviceModel>
        <services>
            <service behaviorConfiguration="ServiceMainBehaviour" name="ChatLibrary.Classes.MyChatServer">
                <endpoint address="Server" binding="netTcpBinding" name="ChatNetTcpBinding" contract="ChatLibrary.Interfaces.IChatContract">
                    <identity>
                        <dns value="localhost"/>
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="mexTcpBinding" name="ChatMexTcpBinding" contract="IMetadataExchange"/>
                <host>
                    <baseAddresses>
                        <add baseAddress="net.tcp://localhost:8002/Chat/"/>
                    </baseAddresses>
                </host>
            </service>
        </services>
        <behaviors>
            <serviceBehaviors>
                <behavior name="ServiceMainBehaviour">
                    <serviceMetadata httpGetEnabled="false" httpsGetEnabled="false"/>
                    <serviceDebug includeExceptionDetailInFaults="true"/>
                </behavior>
            </serviceBehaviors>
        </behaviors>
    </system.serviceModel>

</configuration>
